<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:padding="19dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/nums"
        android:paddingHorizontal="15dp"
        android:paddingVertical="38dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="57dp"
        android:textStyle="bold" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        android:name="com.example.calculator.display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/screen"
        android:layout_alignBottom="@+id/nums"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="490dp" />

    <LinearLayout
        android:id="@+id/nums"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="19dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/AC"
                style="@style/Button2"
                android:background="@drawable/shape3"
                android:text="AC"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/seven"
                style="@style/Button1"
                android:background="@drawable/shape2"
                android:text="7"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/four"
                style="@style/Button1"
                android:background="@drawable/shape2"
                android:text="4"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/one"
                style="@style/Button1"
                android:background="@drawable/shape2"
                android:text="1"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/zeroes"
                style="@style/Button1"
                android:background="@drawable/shape2"
                android:text="00"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/clear"
                style="@style/Button2"
                android:background="@drawable/shape3"
                android:text="C"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/eight"
                style="@style/Button1"
                android:background="@drawable/shape2"
                android:text="8"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/five"
                style="@style/Button1"
                android:background="@drawable/shape2"
                android:text="5"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/two"
                style="@style/Button1"
                android:background="@drawable/shape2"
                android:text="2"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/zero"
                style="@style/Button1"
                android:background="@drawable/shape2"
                android:text="0"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:textColor="@color/white">

            <Button
                android:id="@+id/modulus"
                style="@style/Button2"
                android:background="@drawable/shape1"
                android:text="%"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/nine"
                style="@style/Button1"
                android:background="@drawable/shape2"
                android:text="9"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/six"
                style="@style/Button1"
                android:background="@drawable/shape2"
                android:text="6"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/three"
                style="@style/Button1"
                android:background="@drawable/shape2"
                android:text="3"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/dot"
                style="@style/Button1"
                android:background="@drawable/shape2"
                android:text="."
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/divide"
                style="@style/Button2"
                android:background="@drawable/shape1"
                android:text="/"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/multiply"
                style="@style/Button1"
                android:background="@drawable/shape1"
                android:text="X"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/minus"
                style="@style/Button1"
                android:background="@drawable/shape1"
                android:text="-"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/plus"
                style="@style/Button1"
                android:background="@drawable/shape1"
                android:text="+"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/equal"
                style="@style/Button3"
                android:background="@drawable/shape3"
                android:text="="
                android:textColor="@color/white" />
        </LinearLayout>


    </LinearLayout>


</ScrollView>